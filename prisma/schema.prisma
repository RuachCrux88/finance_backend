generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                  String             @id @default(uuid())
  email               String             @unique
  name                String?
  createdAt           DateTime           @default(now())
  emailVerifiedAt     DateTime?
  password            String?
  googleId            String?            @unique
  accounts            Account[]
  categoriesCreated   Category[]         @relation("CategoryCreatedBy")
  goalsCreated        Goal[]             @relation("GoalsCreatedBy")
  Goal                Goal[]             @relation("GoalsUser")
  goalProgressCreated GoalProgress[]     @relation("GoalProgressCreatedBy")
  invitationsSent     Invitation[]       @relation("InvitationInvitedBy")
  sessions            Session[]
  settlementsCreated  Settlement[]       @relation("SettlementCreatedBy")
  settlementsFrom     Settlement[]       @relation("SettlementFrom")
  settlementsTo       Settlement[]       @relation("SettlementTo")
  transactionsCreated Transaction[]      @relation("TransactionsCreatedBy")
  transactionsPaid    Transaction[]      @relation("PaidBy")
  TransactionSplit    TransactionSplit[] @relation("SplitsOwedBy")
  walletsOwned        Wallet[]           @relation("WalletOwner")
  walletMemberships   WalletMember[]
  paymentReminders    PaymentReminder[]
}

model Wallet {
  id           String         @id @default(uuid())
  name         String
  type         WalletType     @default(PERSONAL)
  currency     String         @default("COP")
  inviteCode   String         @unique
  isDefault    Boolean        @default(false)
  createdById  String
  createdAt    DateTime       @default(now())
  goals        Goal[]
  invitations  Invitation[]
  settlements  Settlement[]
  transactions Transaction[]
  categories   Category[]     @relation("WalletCategories")
  createdBy    User           @relation("WalletOwner", fields: [createdById], references: [id])
  members      WalletMember[]
  paymentReminders PaymentReminder[]
}

model WalletMember {
  id       String   @id @default(uuid())
  walletId String
  userId   String
  role     Role     @default(MEMBER)
  joinedAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet   Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)

  @@unique([walletId, userId])
}

model Category {
  id           String        @id @default(uuid())
  name         String
  type         CategoryType
  description  String?
  isSystem     Boolean       @default(true)
  walletId     String?       // Categorías por billetera (null = categorías globales del sistema)
  createdById  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  createdBy    User?         @relation("CategoryCreatedBy", fields: [createdById], references: [id])
  wallet       Wallet?       @relation("WalletCategories", fields: [walletId], references: [id])
  transactions Transaction[]
  paymentReminders PaymentReminder[]

  @@unique([name, type, walletId])
}

model Transaction {
  id           String             @id @default(uuid())
  walletId     String
  categoryId   String?
  type         TransactionType
  amount       Decimal            @db.Decimal(14, 2)
  date         DateTime           @default(now())
  description  String?
  paidByUserId String
  createdById  String
  createdAt    DateTime           @default(now())
  category     Category?          @relation(fields: [categoryId], references: [id])
  createdBy    User               @relation("TransactionsCreatedBy", fields: [createdById], references: [id])
  paidBy       User               @relation("PaidBy", fields: [paidByUserId], references: [id])
  wallet       Wallet             @relation(fields: [walletId], references: [id], onDelete: Cascade)
  splits       TransactionSplit[]
  paymentReminder PaymentReminder?
}

model TransactionSplit {
  id            String      @id @default(uuid())
  transactionId String
  owedByUserId  String
  amount        Decimal     @db.Decimal(14, 2)
  settled       Boolean     @default(false)
  owedBy        User        @relation("SplitsOwedBy", fields: [owedByUserId], references: [id])
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@unique([transactionId, owedByUserId])
}

model Settlement {
  id          String   @id @default(uuid())
  walletId    String
  fromUserId  String
  toUserId    String
  amount      Decimal  @db.Decimal(14, 2)
  date        DateTime @default(now())
  createdById String
  createdBy   User     @relation("SettlementCreatedBy", fields: [createdById], references: [id])
  fromUser    User     @relation("SettlementFrom", fields: [fromUserId], references: [id])
  toUser      User     @relation("SettlementTo", fields: [toUserId], references: [id])
  wallet      Wallet   @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model Goal {
  id            String         @id @default(uuid())
  scope         String
  userId        String?
  walletId      String?
  name          String
  targetAmount  Decimal        @db.Decimal(14, 2)
  currentAmount Decimal        @default(0) @db.Decimal(14, 2)
  deadline      DateTime?
  status        GoalStatus     @default(ACTIVE)
  createdById   String
  createdAt     DateTime       @default(now())
  createdBy     User           @relation("GoalsCreatedBy", fields: [createdById], references: [id])
  user          User?          @relation("GoalsUser", fields: [userId], references: [id])
  wallet        Wallet?        @relation(fields: [walletId], references: [id])
  progress      GoalProgress[]
}

model GoalProgress {
  id          String   @id @default(uuid())
  goalId      String
  amount      Decimal  @db.Decimal(14, 2)
  note        String?
  date        DateTime @default(now())
  createdById String
  createdBy   User     @relation("GoalProgressCreatedBy", fields: [createdById], references: [id])
  goal        Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
}

model Invitation {
  id              String       @id @default(uuid())
  walletId        String
  email           String
  status          InviteStatus @default(PENDING)
  token           String       @unique
  invitedByUserId String
  expiresAt       DateTime
  createdAt       DateTime     @default(now())
  invitedBy       User         @relation("InvitationInvitedBy", fields: [invitedByUserId], references: [id])
  wallet          Wallet       @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model PaymentReminder {
  id            String      @id @default(uuid())
  userId        String
  walletId      String
  categoryId    String       // Categoría de gasto obligatoria
  name          String
  amount        Decimal     @db.Decimal(14, 2)
  description   String?
  dueDate       DateTime
  reminderDate  DateTime?   // Cuándo notificar (opcional)
  isPaid        Boolean     @default(false)
  paidAt        DateTime?
  transactionId String?      @unique // Si se creó una transacción
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallet        Wallet      @relation(fields: [walletId], references: [id], onDelete: Cascade)
  category      Category    @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  transaction   Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)
}

enum WalletType {
  PERSONAL
  GROUP
}

enum TransactionType {
  INCOME
  EXPENSE
  SETTLEMENT
}

enum Role {
  OWNER
  MEMBER
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

enum GoalStatus {
  ACTIVE
  PAUSED
  ACHIEVED
  CANCELLED
}

enum CategoryType {
  INCOME
  EXPENSE
}
