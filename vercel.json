{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/index.ts": {
      "includeFiles": [
        "node_modules/.prisma/client/**",
        "node_modules/@prisma/client/**",
        "prisma/schema.prisma"
      ]
    }
  },
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "api/index.ts" }
  ]
}
